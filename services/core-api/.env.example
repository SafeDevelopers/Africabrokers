# Core API Environment Variables
# Copy this file to .env and fill in the values

# Node Environment
# Options: development, test, production
# Defaults to development if not set
NODE_ENV=development

# Server Port
# Defaults to 4000 if not set
# Runtime Docker sets 8080 via Dockerfile
PORT=4000

# Required: Database Connection URL
# PostgreSQL connection string (Prisma format)
DATABASE_URL=postgresql://user:password@localhost:5432/afribrok?schema=public

# Required: Redis Connection URL
# Used for caching and session storage
REDIS_URL=redis://localhost:6379

# Optional: CORS Allowed Origins
# Comma-separated list of allowed origins
# If not set, defaults to localhost dev origins + production domains
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3003,http://localhost:3004,http://localhost:3006,https://admin.afribrok.com,https://afribrok.com,https://market.afribrok.com

# Required: JWT Secret
# Secret key for signing JWT tokens
# Defaults to 'dev-secret-change-in-production' if not set (CHANGE IN PRODUCTION!)
JWT_SECRET=dev-secret-change-in-production

# Optional: JWT Issuer
# JWT issuer claim for token verification
JWT_ISSUER=

# Optional: JWT Audience
# JWT audience claim for token verification
JWT_AUDIENCE=

# Required: CSRF Secret
# Secret key for CSRF token generation
# Defaults to 'change-me-in-production' if not set (CHANGE IN PRODUCTION!)
CSRF_SECRET=change-me-in-production

# Optional: Git SHA / Version
# Used for status metadata
GIT_SHA=
VERSION=

# Required: AWS S3 Storage Configuration
# AWS region for S3 storage
AWS_REGION=us-east-1

# AWS Access Key ID for S3 storage
AWS_ACCESS_KEY_ID=your-aws-access-key-id

# AWS Secret Access Key for S3 storage
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# S3-compatible storage endpoint URL
STORAGE_ENDPOINT=https://s3.amazonaws.com

# S3 bucket name for media storage
STORAGE_BUCKET=afribrok-media

# Required: OIDC / Keycloak Configuration
# OIDC issuer URL (Keycloak realm URL)
OIDC_ISSUER_URL=https://keycloak.example.com/realms/afribrok

# OIDC client ID
OIDC_CLIENT_ID=afribrok-api

# OIDC client secret
OIDC_CLIENT_SECRET=your-oidc-client-secret

# Required: Telebirr Payment Integration
# Telebirr sandbox API key
TELEBIRR_SANDBOX_API_KEY=your-telebirr-api-key

# Telebirr sandbox secret
TELEBIRR_SANDBOX_SECRET=your-telebirr-secret
