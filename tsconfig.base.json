{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["dom", "dom.iterable", "es2022"],
    "allowJs": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@afribrok/design-tokens/*": ["packages/config/design-tokens/*"],
      "@afribrok/ui/*": ["packages/ui/*"],
      "@afribrok/lib/*": ["packages/lib/*"],
      "@afribrok/env/*": ["packages/config/env/*"]
    }
  }
}
