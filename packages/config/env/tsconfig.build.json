{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"],
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "sourceMap": false
  },
  "include": ["*.ts"],
  "exclude": ["dist", "node_modules"]
}
