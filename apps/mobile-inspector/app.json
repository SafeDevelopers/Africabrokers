{
  "expo": {
    "name": "AfriBrok Inspector",
    "slug": "mobile-inspector",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "scheme": "afribrokinspector",
    "icon": "./assets/image/icon.png",
    "splash": {
      "image": "./assets/image/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#184C8C"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "plugins": [
      "expo-router",
      "expo-camera",
      "expo-font"
    ],
    "ios": {
      "bundleIdentifier": "com.afribrok.inspector",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan QR codes for license verification."
      }
    },
    "android": {
      "package": "com.afribrok.inspector",
      "adaptiveIcon": {
        "foregroundImage": "./assets/image/icon.png",
        "backgroundColor": "#184C8C"
      },
      "permissions": [
        "CAMERA",
        "INTERNET",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {},
    "extra": {
      "eas": {
        "projectId": "00000000-0000-0000-0000-000000000000"
      },
      "apiBaseUrl": "https://api.afribrok.com"
    }
  }
}
