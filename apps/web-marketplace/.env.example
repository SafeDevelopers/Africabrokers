# Web Marketplace Environment Variables
# Copy this file to .env.local and fill in the values

# Required: API Base URL for the Core API
# This is the primary API endpoint used by the centralized API client
NEXT_PUBLIC_API_BASE_URL=https://api.afribrok.com

# Optional: Legacy API Base URL (fallback for some pages)
# Used as fallback in some pages if NEXT_PUBLIC_API_BASE_URL is not set
NEXT_PUBLIC_CORE_API_BASE_URL=https://api.afribrok.com

# Optional: Legacy API URL (fallback for broker listing pages)
# Used as fallback in broker listing pages
NEXT_PUBLIC_API_URL=https://api.afribrok.com

# Required: Tenant Key for tenant headers and client theming
# Defaults to et-addis if not set
NEXT_PUBLIC_TENANT_KEY=et-addis

# Optional: App URL for metadata base
# Controls metadata base for Next.js head tags
NEXT_PUBLIC_APP_URL=https://afribrok.com

# Optional: App Base URL for CapRover deployment
# Used for generating absolute URLs in production
NEXT_PUBLIC_APP_BASE_URL=https://afribrok.com

# Optional: Non-public env fallback for login route
# Used as fallback in login route if NEXT_PUBLIC_CORE_API_BASE_URL is not set
CORE_API_BASE_URL=https://api.afribrok.com

# Optional: Check Broker Status flag
# If set to "true", login route always calls backend before trusting demo data
CHECK_BROKER_STATUS=false

# Optional: Enable Mocks flag
# If set to "true", enables demo accounts and mock data in development
NEXT_PUBLIC_ENABLE_MOCKS=false

# Node Environment (set automatically by Next.js in production)
# Options: development, production
NODE_ENV=development
