# Web Admin Environment Variables
# Copy this file to .env.local and fill in the values

# Required: API Base URL for the Core API
# This is the primary API endpoint used by the centralized API client
NEXT_PUBLIC_API_BASE_URL=https://api.afribrok.com

# Optional: Legacy API Base URL (fallback for some components)
# Used as fallback in some components if NEXT_PUBLIC_API_BASE_URL is not set
NEXT_PUBLIC_CORE_API_BASE_URL=https://api.afribrok.com

# Optional: Verify Base URL for QR code links
# Defaults to https://verify.afribrok.com if not set
NEXT_PUBLIC_VERIFY_BASE_URL=https://verify.afribrok.com

# Optional: Tenant Key for theming
# Used in Tailwind config for tenant-specific theming
NEXT_PUBLIC_TENANT_KEY=et-addis

# Optional: App Base URL for CapRover deployment
# Used for generating absolute URLs in production
NEXT_PUBLIC_APP_BASE_URL=https://admin.afribrok.com

# Node Environment (set automatically by Next.js in production)
# Options: development, production
NODE_ENV=development
